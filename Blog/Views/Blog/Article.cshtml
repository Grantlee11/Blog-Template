@model MyBlog
@{
    ViewData["Title"] = "Article";
}

<div class="container p-3">
    <div class="row pt-2">
        <div class="col-9 mt-4">
            <h1>@Model.Title</h1>
        </div>
        <div class="col-3 text-end mt-3">
            <h4 class="mt-3">@Model.Author</h4>
            <h6>@Model.CreatedDateTime</h6>
        </div>
        <hr />
    </div>
</div>

<h5 class="text-center mt-2">@Model.Body</h5>
