@model IEnumerable<MyBlog>
@{
    ViewData["Title"] = "Manage";
}


<div class="container p-3">
    <div class="row pt-2">
        <div class="col-6">
            <h1>Blog Posts</h1>
        </div>
        <div class="col-6 text-end mt-3">
            <a asp-controller="Blog" asp-action="Create" class="btn btn-success">Create Blog</a>
        </div>
    </div>
</div>

<hr />

<table class="table table-bordered table-danger-striped" style="width:100%">
    <thead>
        <tr>
            <th width="45%">
                Title
            </th>
            <th width="20%">
                Author
            </th>
            <th width="20%">
                Date Posted
            </th>
            <th width="15%">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="45%">
                    @obj.Title
                </td>
                <td width="20%">
                    @obj.Author
                </td>
                <td width="20%">
                    @obj.CreatedDateTime
                </td>
                <td width="15%">
                    <a asp-controller="Blog" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Blog" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

